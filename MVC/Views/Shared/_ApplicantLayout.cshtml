<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/kendo/kendo.default-v2.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<style>
/* ===== GLOBAL TOP SPACING FIX ===== */
body {
    padding-top: 20px;
    background: #f4f7fb;
}

/* FLOATING NAVBAR WRAPPER */
.floating-navbar-wrapper {
    position: sticky;
    top: 20px;                 /* 👈 upper gap */
    z-index: 1050;
    padding: 0 24px;
    margin-bottom: 20px;       /* 👈 space below navbar */
}

/* NAVBAR */
.floating-navbar {
    height: 64px;
    background: linear-gradient(135deg, #1565c0, #0d47a1);
    border-radius: 18px;
    box-shadow: 0 14px 35px rgba(13, 71, 161, 0.35);
}

/* ===== FORCE LOGO + ICONS TO WHITE ===== */
.floating-navbar,
.floating-navbar * {
    color: #ffffff !important;
}

/* BRAND (LOGO + TEXT) */
.floating-navbar .navbar-brand,
.floating-navbar .navbar-brand span,
.floating-navbar .navbar-brand i {
    color: #ffffff !important;
}

/* ICONS */
.nav-icon {
    color: #ffffff !important;
    font-size: 1.05rem;
    padding: 8px 10px;
    border-radius: 50%;
    transition: all 0.25s ease;
}

.nav-icon:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-1px);
}

/* LOGOUT SPECIAL HOVER */
.logout-icon:hover {
    background: rgba(255, 77, 77, 0.25);
}

/* NOTIFICATION BADGE */
.notif-dot {
    position: absolute;
    top: 2px;
    right: -2px;
    background: #ff3b30 !important;
    color: #ffffff !important;
    font-size: 0.65rem;
    padding: 2px 6px;
    border-radius: 999px;
}
 .bg-decoration {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
            overflow: hidden;
        }

 .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            top: 10%;
            left: 5%;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #0D47A1, #1E88E5);
            top: 60%;
            right: 10%;
            animation-delay: 5s;
        }

        .shape-3 {
            width: 250px;
            height: 250px;
            background: linear-gradient(135deg, #1565C0, #1E88E5);
            bottom: 10%;
            left: 50%;
            animation-delay: 10s;
        }

      @@keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            25% { transform: translate(30px, -30px) scale(1.1); }
            50% { transform: translate(-20px, 20px) scale(0.9); }
            75% { transform: translate(20px, 10px) scale(1.05); }
        }
}


</style>

<body>
    <header>
        <!-- FLOATING NAVBAR WRAPPER -->
<div class="floating-navbar-wrapper">
    <nav class="navbar floating-navbar">
        <div class="container-fluid px-4">

            <!-- LEFT : LOGO -->
            <a class="navbar-brand d-flex align-items-center gap-2"
               href="@Url.Action("Dashboard", "Applicant")">
                <i class="fas fa-briefcase"></i>
                <span class="fw-bold">TalentBridgePro</span>
            </a>

            <!-- RIGHT : ICONS -->
            <div class="d-flex align-items-center gap-3 ms-auto">

                <a class="nav-icon" title="Change Password"
                   href="@Url.Action("ChangePassword", "User")">
                    <i class="fa-solid fa-key"></i>
                </a>

                <a class="nav-icon" title="Saved Jobs"
                   href="@Url.Action("MyJobs", "Applicant")">
                    <i class="fa-solid fa-bookmark"></i>
                </a>

                <a class="nav-icon" title="Messages">
                    <i class="fa-solid fa-message"></i>
                </a>

                <a class="nav-icon position-relative" title="Notifications">
                    <i class="fa-solid fa-bell"></i>
                    <span class="notif-dot">3</span>
                </a>

                <!-- 🔴 LOGOUT ICON (BEFORE PROFILE) -->
                <a class="nav-icon logout-icon"
                   title="Logout"
                   href="/User/Logout">
                    <i class="fa-solid fa-right-from-bracket"></i>
                </a>

                <!-- PROFILE -->
                <a class="nav-icon"
                   title="Profile"
                   href="@Url.Action("Profile", "Applicant")">
                    <i class="fa-solid fa-user"></i>
                </a>

            </div>
        </div>
    </nav>
</div>
  <div class="bg-decoration">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
    </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/kendo/kendo.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
