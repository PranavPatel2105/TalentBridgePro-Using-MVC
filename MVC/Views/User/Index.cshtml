            const dotsContainer = document.getElementById('sliderDots');
            
            if (!track) return;
            
            let currentIndex = 0;
            let cardsPerView = 3;
            let autoSlideInterval;
            let isTransitioning = false;
            
            const cards = Array.from(track.children);
            const totalCards = cards.length;

            updateCardsPerView();

// Clone first visible cards
for (let i = 0; i < cardsPerView; i++) {
    track.appendChild(cards[i].cloneNode(true));
}


            // ===== CLONE FIRST SLIDE CARDS FOR INFINITE LOOP =====




updateCardsPerView();

// Clone only first visible cards
for (let i = 0; i < cardsPerView; i++) {
    track.appendChild(cards[i].cloneNode(true));
}

            function updateCardsPerView() {
    if (window.innerWidth <= 768) cardsPerView = 1;
    else if (window.innerWidth <= 1024) cardsPerView = 2;
    else cardsPerView = 3;
}

            
            function getTotalSlides() {
                return Math.ceil(totalCards / cardsPerView);
            }
            
            function updateSlider(animate = true) {
                const card = cards[0];
                if (!card) return;
                
                const cardWidth = card.offsetWidth;
                const gap = 32;
                const offset = -currentIndex * (cardWidth + gap);

                
                track.style.transition = animate ? 'transform 0.6s cubic-bezier(0.4, 0, 0.2, 1)' : 'none';
               track.style.transform = `translateX(${offset}px)`;

                
                updateDots();
            }
            
            function updateDots() {
                const totalSlides = getTotalSlides();
                dotsContainer.innerHTML = '';
                
                for (let i = 0; i < totalSlides; i++) {
                    const dot = document.createElement('div');
                    dot.classList.add('dot');
                    if (i === currentIndex) dot.classList.add('active');
                    dot.onclick = () => goToSlide(i);
                    dotsContainer.appendChild(dot);
                }
            }
            
            function goToSlide(index) {
                if (isTransitioning) return;
                isTransitioning = true;
                currentIndex = index;
                updateSlider();
                setTimeout(() => isTransitioning = false, 600);
                resetAutoSlide();
            }
