@{
    ViewData["Title"] = "TalentBridgePro";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TalentBridgePro - Find Your Dream Job</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #F4F8FF;
            color: #212529;
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-decoration {
            position: fixed;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: -1;
            overflow: hidden;
        }

        .floating-shape {
            position: absolute;
            border-radius: 50%;
            opacity: 0.1;
            animation: float 20s infinite ease-in-out;
        }

        .shape-1 {
            width: 300px;
            height: 300px;
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            top: 10%;
            left: 5%;
            animation-delay: 0s;
        }

        .shape-2 {
            width: 200px;
            height: 200px;
            background: linear-gradient(135deg, #0D47A1, #1E88E5);
            top: 60%;
            right: 10%;
            animation-delay: 5s;
        }

        .shape-3 {
            width: 250px;
            height: 250px;
            background: linear-gradient(135deg, #1565C0, #1E88E5);
            bottom: 10%;
            left: 50%;
            animation-delay: 10s;
        }

        @@keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            25% { transform: translate(30px, -30px) scale(1.1); }
            50% { transform: translate(-20px, 20px) scale(0.9); }
            75% { transform: translate(20px, 10px) scale(1.05); }
        }

        /* Navbar */
        .navbar {
            position: sticky;        /* 👈 Sticky */
    top: 0;                  /* 👈 Stick to top */
    width: 100vw;
            background: linear-gradient(135deg, #0D47A1 0%, #1565C0 100%);
            padding: 1rem 0;
            box-shadow: 0 4px 20px rgba(13, 71, 161, 0.3);
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(10px);
            height: 72px;
            width: 100%;
            border-radius: 50px;
            margin: 20px;
        }

        .nav-container {
            width: 100%;
            display: flex;
            justify-content: space-between; 
            align-items: center;            
            padding: 0 2.5rem; 
            
            
        }

        .logo {
            color: white;
            font-size: 1.5rem;
            font-weight: 700;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: transform 0.3s ease;
            margin-left: -4px;
        }

        .logo:hover {
            transform: scale(1.05);
        }

        .logo i {
            font-size: 1.8rem;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .btn {
            padding: 0.7rem 1.5rem;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            font-size: 0.95rem;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255,255,255,0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        .btn:hover::before {
            width: 300px;
            height: 300px;
        }

        .btn-primary {
            background: white;
            color: #1E88E5;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255,255,255,0.4);
        }

        .btn-switch {
            background: rgba(255,255,255,0.2);
            color: white;
            border: 2px solid rgba(255,255,255,0.5);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-switch:hover {
            background: rgba(255,255,255,0.3);
            border-color: white;
            transform: translateY(-2px);
        }

        /* Hero Section */
        .hero {
            max-width: 1200px;
            margin: 0 auto;
            padding: 5rem 2rem;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
            min-height: calc(100vh - 80px);
        }

        .hero-content h1 {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #0D47A1, #1E88E5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            line-height: 1.2;
            margin-bottom: 1.5rem;
            animation: slideInLeft 0.8s ease-out;
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .hero-content p {
            font-size: 1.3rem;
            color: #6C757D;
            margin-bottom: 2.5rem;
            animation: slideInLeft 0.8s ease-out 0.2s both;
        }

        .hero-actions {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            animation: slideInLeft 0.8s ease-out 0.4s both;
        }

        .btn-large {
            padding: 1.2rem 2.8rem;
            font-size: 1.1rem;
            border-radius: 30px;
        }

        .btn-cta {
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            color: white;
            box-shadow: 0 8px 25px rgba(30,136,229,0.3);
        }

        .btn-cta:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(30,136,229,0.5);
        }

        .btn-secondary {
            background: transparent;
            color: #1E88E5;
            border: 2px solid #1E88E5;
        }

        .btn-secondary:hover {
            background: #E3F2FD;
            transform: translateY(-3px);
        }

        /* Hero Visual - Floating Cards */
        .hero-visual {
            position: relative;
            animation: fadeIn 1s ease-out 0.5s both;
        }

        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .floating-card {
            background: white;
            border-radius: 20px;
            padding: 1.8rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
            margin-bottom: 1.5rem;
            transition: all 0.4s ease;
            animation: floatCard 4s infinite ease-in-out;
            border: 2px solid transparent;
        }

        .floating-card:nth-child(1) { animation-delay: 0s; }
        .floating-card:nth-child(2) { animation-delay: 1s; }
        .floating-card:nth-child(3) { animation-delay: 2s; }

        @@keyframes floatCard {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        .floating-card:hover {
            transform: translateY(-10px) !important;
            box-shadow: 0 20px 50px rgba(30,136,229,0.15);
            border-color: #CFE2FF;
        }

        .job-card {
            display: flex;
            align-items: start;
            gap: 1.2rem;
        }

        .job-icon {
            width: 65px;
            height: 65px;
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.6rem;
            flex-shrink: 0;
            box-shadow: 0 6px 20px rgba(30,136,229,0.3);
            transition: transform 0.3s ease;
        }

        .floating-card:hover .job-icon {
            transform: rotate(5deg) scale(1.1);
        }

        .job-info h3 {
            color: #212529;
            font-size: 1.25rem;
            margin-bottom: 0.4rem;
            font-weight: 700;
        }

        .job-company {
            color: #6C757D;
            font-size: 0.95rem;
            margin-bottom: 0.8rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .job-tags {
            display: flex;
            gap: 0.6rem;
            flex-wrap: wrap;
        }

        .tag {
            background: linear-gradient(135deg, #E3F2FD, #CFE2FF);
            color: #1565C0;
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 700;
            transition: all 0.3s ease;
        }

        .tag:hover {
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            color: white;
            transform: scale(1.05);
        }

        @* /* Search Section */
        .search-section {
            max-width: 1200px;
            margin: -3rem auto 5rem;
            padding: 0 2rem;
            animation: slideUp 0.8s ease-out 0.6s both;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .search-bar {
            background: white;
            border-radius: 25px;
            padding: 1.5rem;
            box-shadow: 0 15px 50px rgba(0,0,0,0.1);
            display: grid;
            grid-template-columns: 1fr 1fr auto;
            gap: 1rem;
            align-items: center;
            border: 2px solid #CFE2FF;
        }

        .search-input {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 1.5rem;
            background: #F8FBFF;
            border-radius: 20px;
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

        .search-input:focus-within {
            border-color: #1E88E5;
            background: white;
            box-shadow: 0 0 0 4px rgba(30,136,229,0.1);
        }

        .search-input i {
            color: #1E88E5;
            font-size: 1.2rem;
        }

        .search-input input {
            border: none;
            background: transparent;
            width: 100%;
            font-size: 1rem;
            color: #212529;
            outline: none;
        }

        .search-input input::placeholder {
            color: #6C757D;
        } *@

        @* .btn-search {
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            color: white;
            padding: 1.2rem 2.5rem;
            border-radius: 20px;
            font-weight: 700;
            font-size: 1rem;
            white-space: nowrap;
            box-shadow: 0 8px 25px rgba(30,136,229,0.3);
        }

        .btn-search:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(30,136,229,0.5);
        } *@

        /* Features Section */
        .features {
            max-width: 1200px;
            margin: 5rem auto;
            padding: 0 2rem;
        }

        .section-title {
            text-align: center;
            margin-bottom: 4rem;
            animation: fadeIn 0.8s ease-out;
        }

        .section-title h2 {
            font-size: 2.8rem;
            background: linear-gradient(135deg, #0D47A1, #1E88E5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            font-weight: 800;
        }

        .section-title p {
            font-size: 1.2rem;
            color: #6C757D;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }

        .feature-card {
            background: white;
            padding: 2.5rem;
            border-radius: 25px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.06);
            text-align: center;
            transition: all 0.4s ease;
            border: 2px solid transparent;
            animation: fadeInUp 0.6s ease-out both;
        }

        .feature-card:nth-child(1) { animation-delay: 0.1s; }
        .feature-card:nth-child(2) { animation-delay: 0.2s; }
        .feature-card:nth-child(3) { animation-delay: 0.3s; }
        .feature-card:nth-child(4) { animation-delay: 0.4s; }
        .feature-card:nth-child(5) { animation-delay: 0.5s; }
        .feature-card:nth-child(6) { animation-delay: 0.6s; }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .feature-card:hover {
            transform: translateY(-12px);
            box-shadow: 0 20px 60px rgba(30,136,229,0.15);
            border-color: #CFE2FF;
        }

        .feature-icon {
            width: 90px;
            height: 90px;
            background: linear-gradient(135deg, #E3F2FD, #CFE2FF);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: #1E88E5;
            font-size: 2.2rem;
            transition: all 0.4s ease;
            box-shadow: 0 8px 25px rgba(30,136,229,0.2);
        }

        .feature-card:hover .feature-icon {
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            color: white;
            transform: scale(1.1) rotate(5deg);
        }

        .feature-card h3 {
            color: #212529;
            font-size: 1.4rem;
            margin-bottom: 1rem;
            font-weight: 700;
        }

        .feature-card p {
            color: #6C757D;
            line-height: 1.7;
            font-size: 1rem;
        }

        /* Stats Section */
        .stats {
            background: linear-gradient(135deg, #0D47A1, #1565C0);
            color: white;
            padding: 5rem 2rem;
            margin: 5rem 0;
            position: relative;
            overflow: hidden;
        }

        .stats::before {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            top: -200px;
            right: -200px;
        }

        .stats::after {
            content: '';
            position: absolute;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.05);
            border-radius: 50%;
            bottom: -150px;
            left: -150px;
        }

        .stats-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 3rem;
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .stat-item {
            animation: fadeIn 0.8s ease-out both;
        }

        .stat-item:nth-child(1) { animation-delay: 0.2s; }
        .stat-item:nth-child(2) { animation-delay: 0.4s; }
        .stat-item:nth-child(3) { animation-delay: 0.6s; }
        .stat-item:nth-child(4) { animation-delay: 0.8s; }

        .stat-item h3 {
            font-size: 3.5rem;
            font-weight: 900;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, white, #E3F2FD);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stat-item p {
            font-size: 1.2rem;
            opacity: 0.95;
            font-weight: 500;
        }

        /* Candidate Cards (Recruiter) */
        .candidate-card {
            background: white;
            border-radius: 20px;
            padding: 1.8rem;
            box-shadow: 0 10px 40px rgba(0,0,0,0.08);
            margin-bottom: 1.2rem;
            display: flex;
            align-items: center;
            gap: 1.2rem;
            transition: all 0.4s ease;
            animation: floatCard 4s infinite ease-in-out;
            border: 2px solid transparent;
        }

        .candidate-card:nth-child(1) { animation-delay: 0s; }
        .candidate-card:nth-child(2) { animation-delay: 1s; }
        .candidate-card:nth-child(3) { animation-delay: 2s; }

        .candidate-card:hover {
            transform: translateX(10px) !important;
            box-shadow: 0 20px 50px rgba(30,136,229,0.15);
            border-color: #CFE2FF;
        }

        .candidate-avatar {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #2E7D32, #4CAF50);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.6rem;
            font-weight: 700;
            flex-shrink: 0;
            box-shadow: 0 6px 20px rgba(46,125,50,0.3);
            transition: transform 0.3s ease;
        }

        .candidate-card:hover .candidate-avatar {
            transform: scale(1.1);
        }

        .candidate-info {
            flex: 1;
        }

        .candidate-info h4 {
            color: #212529;
            margin-bottom: 0.3rem;
            font-size: 1.2rem;
            font-weight: 700;
        }

        .candidate-info p {
            color: #6C757D;
            font-size: 0.95rem;
        }

        .match-badge {
            background: linear-gradient(135deg, #E8F5E9, #C8E6C9);
            color: #2E7D32;
            padding: 0.6rem 1.2rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 800;
            box-shadow: 0 4px 15px rgba(46,125,50,0.2);
            transition: all 0.3s ease;
        }

        .candidate-card:hover .match-badge {
            background: linear-gradient(135deg, #2E7D32, #4CAF50);
            color: white;
            transform: scale(1.05);
        }

        /* Mobile Menu */
        .mobile-menu-btn {
            display: none;
            background: transparent;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .hero {
                grid-template-columns: 1fr;
                padding: 2rem 1rem;
                text-align: center;
            }

            .hero-content h1 {
                font-size: 2.5rem;
            }

            .hero-content p {
                font-size: 1.1rem;
            }

            .hero-actions {
                justify-content: center;
            }

            .search-bar {
                grid-template-columns: 1fr;
            }

            .nav-actions {
                display: none;
            }

            .mobile-menu-btn {
                display: block;
            }

            .features-grid {
                grid-template-columns: 1fr;
            }

            .stats-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .section-title h2 {
                font-size: 2rem;
            }
        }

        .hidden {
            display: none;
        }

            /* ============================================
           TRENDING COMPANIES SLIDER - WORKING VERSION
           ============================================ */
        
        /* Slider Container */
        .trending-companies-section {
            max-width: 1200px;
            margin: 4rem auto 5rem;
            padding: 0 2rem;
            animation: fadeInSlider 1s ease-out;
        }

        @@keyframes fadeInSlider {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .trending-companies-header {
            text-align: center;
            margin-bottom: 3rem;
        }

        .trending-companies-header h2 {
            font-size: 2.5rem;
            background: linear-gradient(135deg, #0D47A1, #1E88E5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.8rem;
            font-weight: 800;
        }
        
        .trending-companies-header h2::before {
            content: '⭐ ';
        }

        .trending-companies-header p {
            font-size: 1.1rem;
            color: #6C757D;
        }

        /* Slider Wrapper */
        .slider-wrapper {
            position: relative;
            overflow: hidden;
            border-radius: 25px;
            background: white;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.08);
            padding: 3rem 1rem;
        }

        /* Slider Track */
        .slider-track {
            display: flex;
            gap: 2rem;
            transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        }

        /* Company Card */
        .company-card {
            min-width: calc((100% - 4rem) / 3);
            flex-shrink: 0;
            background: linear-gradient(145deg, #FFFFFF 0%, #F8FBFF 100%);
            border-radius: 24px;
            padding: 2.5rem 2rem;
            text-align: center;
            border: 2px solid transparent;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
            position: relative;
            overflow: hidden;
        }

        /* Card Shine Effect */
        .company-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            transition: left 0.5s;
        }

        .company-card:hover::before {
            left: 100%;
        }

        .company-card:hover {
            transform: translateY(-12px) scale(1.02);
            box-shadow: 0 20px 50px rgba(30, 136, 229, 0.25);
            border-color: #1E88E5;
            background: linear-gradient(145deg, #FFFFFF 0%, #E3F2FD 100%);
        }

        /* Company Logo */
        .company-logo {
            width: 110px;
            height: 110px;
            background: linear-gradient(135deg, #1E88E5, #1565C0);
            border-radius: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: white;
            font-size: 3.5rem;
            font-weight: 700;
            box-shadow: 0 10px 30px rgba(30, 136, 229, 0.3);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            position: relative;
            overflow: hidden;
        }

        .company-logo::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
            opacity: 0;
            transition: opacity 0.4s;
        }

        .company-card:hover .company-logo {
            transform: scale(1.15) rotate(-5deg);
            box-shadow: 0 15px 40px rgba(30, 136, 229, 0.5);
        }

        .company-card:hover .company-logo::after {
            opacity: 1;
        }

        /* Company Name */
        .company-name {
            font-size: 1.45rem;
            font-weight: 800;
            color: #212529;
            margin-bottom: 0.5rem;
            letter-spacing: -0.5px;
