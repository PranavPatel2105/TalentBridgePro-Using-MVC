// Function to fetch job details from API
async function fetchAndShowJob(jobId) {
    try {
        // Show loading
        Swal.fire({
            title: 'Loading...',
            text: 'Fetching job details',
            allowOutsideClick: false,
            showConfirmButton: false,
            willOpen: () => Swal.showLoading()
        });

        // Fetch job details
        const response = await fetch(`http://localhost:5140/api/RecruiterApi/GetJob/${jobId}`, {
            headers: {
                'Authorization': 'Bearer ' + token
            }
        });

        if (!response.ok) {
            throw new Error('Failed to fetch job details');
        }

        const job = await response.json();
        
        // Close loading
        Swal.close();
        
        // Populate modal with job data
        populateEditModal(job);
        
        // Show modal
        const editModal = new bootstrap.Modal(document.getElementById('editJobModal'));
        editModal.show();
        
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message || 'Failed to load job details',
            confirmButtonColor: '#ef4444'
        });
    }
}

function getFullJobDescription(jobCard) {
    // Check if description is stored in data attribute
    const fullDesc = jobCard.data('full-description');
    if (fullDesc) return fullDesc;
    
    // Otherwise get truncated description from card
    const truncatedDesc = jobCard.find('.job-description').text();
    if (truncatedDesc && !truncatedDesc.includes('...')) {
        return truncatedDesc;
    }
    
    return null; // Need to fetch from API
}
// Function to extract job data from the job card
function getJobDataFromCard(jobCard) {
    try {
        const jobRole = jobCard.find('.job-title').text().trim();
        const jobType = jobCard.find('.job-type-badge, .contract-badge, .remote-badge, .parttime-badge, .hybrid-badge').text().trim();
        const location = jobCard.find('.job-detail:has(.bi-geo-alt)').contents().last().text().trim();
        const experience = jobCard.find('.time-posted').text().replace('Experience:', '').trim();
        const skills = jobCard.find('.skill-tag').map(function() {
            return $(this).text().trim();
        }).get().join(', ');
        const salary = jobCard.find('.job-detail:has(.bi-currency-rupee)').contents().last().text().replace('LPA', '').trim();
        
        return {
            c_job_id: jobCard.data('job-id'),
            c_role: jobRole,
            c_job_type: jobType,
            c_location: location,
            c_experience: experience,
            c_skills: skills,
            c_salary: salary
            // Note: Description is truncated in card view, we'll fetch it from API if needed
        };
    } catch (error) {
        console.log('Could not extract job data from card:', error);
        return null;
    }
}


