@{
    ViewData["Title"] = "Change Password";
     Layout = "~/Views/Shared/_RecruiterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Password</title>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.3.1010/styles/kendo.common.min.css">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.3.1010/styles/kendo.default.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        .change-password-header {
            background: linear-gradient(135deg, #0d47a1, #1565c0);
            color: #fff;
            border-radius: 14px;
            padding: 22px 26px;
            margin-bottom: 24px;
            display: flex;
            align-items: center;
            gap: 14px;
        }

        .change-password-header .icon {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
        }

        .card-box {
            background: #fff;
            border-radius: 14px;
            padding: 26px;
            box-shadow: 0 8px 22px rgba(0, 0, 0, 0.06);
        }

        .form-control {
            border-radius: 10px;
            background: #f9fbfd;
        }

        .btn-change {
            background: #1e88e5;
            border: none;
            border-radius: 10px;
            padding: 10px;
            width: 100%;
            font-weight: 500;
        }

        .change-footer {
            text-align: center;
            margin-top: 16px;
        }

        .error-message {
            color: #d32f2f;
            font-size: 12px;
            display: none;
            margin-top: 5px;
            font-weight: 500;
        }

        .success-message {
            color: #388e3c;
            font-size: 12px;
            display: none;
            margin-top: 5px;
            font-weight: 500;
        }

        .k-form-field {
            margin-bottom: 8px;
        }

        .password-strength {
            height: 4px;
            border-radius: 2px;
            margin-top: 8px;
            background: #e0e0e0;
            display: none;
        }

        .password-strength-bar {
            height: 100%;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        .strength-weak { background: #f44336; width: 33%; }
        .strength-medium { background: #ff9800; width: 66%; }
        .strength-strong { background: #4caf50; width: 100%; }

        .container {
            max-width: 460px;
            margin: 50px auto;
            padding: 20px;
        }

        .k-button.k-primary {
            background-color: #1e88e5;
        }

        .k-button.k-primary:hover {
            background-color: #1976d2;
        }

        .validation-icon {
            font-size: 12px;
            margin-left: 5px;
        }

        .validation-check {
            color: #4caf50;
        }

        .validation-cross {
            color: #f44336;
        }

        .password-wrapper {
            position: relative;
            display: flex;
            align-items: center;
        }

        .password-toggle {
            position: absolute;
            right: 10px;
            background: none;
            border: none;
            cursor: pointer;
            color: #666;
            font-size: 18px;
            padding: 5px;
            z-index: 10;
            transition: color 0.2s;
        }

        .password-toggle:hover {
            color: #1e88e5;
        }

        .k-textbox {
            padding-right: 40px !important;
        }

        .field-wrapper {
            margin-bottom: 20px;
        }

        .messages-wrapper {
            min-height: 20px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="change-password-header">
            <div class="icon">üîê</div>
            <div>
                <h5 class="mb-0">Change Your Password</h5>
                <small>Update your password securely</small>
            </div>
        </div>

        <div class="card-box">
            <form id="changePasswordForm" class="k-form">
            </form>
        </div>
    </div>

    <div id="notification"></div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.3.1010/js/kendo.all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        const token = "@Html.Raw(Context.Session.GetString("JWT"))";
    console.log("JWT Tokennnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn:::::::::::::::::::", token);
        $(document).ready(function () {
            $("#notification").kendoNotification({
                autoHideAfter: 3000,
                position: {
                    top: 30
                },
                width: 400
            });

            $("#changePasswordForm").kendoForm({
                items: [
                    {
                        field: "c_oldpassword",
                        label: "Current Password",
                        editor: function (container, options) {
                            const fieldWrapper = $('<div class="field-wrapper"></div>').appendTo(container);
                            const wrapper = $('<div class="password-wrapper"></div>').appendTo(fieldWrapper);
                            $(`<input type='password' name='${options.field}' id='${options.field}' required placeholder="Enter current password" />`)
                                .appendTo(wrapper).kendoTextBox();
                            $(`<button type="button" class="password-toggle" onclick="togglePassword('${options.field}')">
                                    <i id="${options.field}_icon" class="bi bi-eye"></i>
                                </button>`).appendTo(wrapper);
                        },
                        validation: {
                            required: { message: "Current password is required" }
                        }
                    },
                    {
                        field: "c_newpassword",
                        label: "New Password",
                        editor: function (container, options) {
                            const fieldWrapper = $('<div class="field-wrapper"></div>').appendTo(container);
                            const wrapper = $('<div class="password-wrapper"></div>').appendTo(fieldWrapper);
                            $(`<input type='password' name='${options.field}' id='${options.field}' required placeholder="Enter new password" />`)
                                .appendTo(wrapper).kendoTextBox();
                            $(`<button type="button" class="password-toggle" onclick="togglePassword('${options.field}')">
                                    <i id="${options.field}_icon" class="bi bi-eye"></i>
                                </button>`).appendTo(wrapper);
                            
                            const messagesWrapper = $('<div class="messages-wrapper"></div>').appendTo(fieldWrapper);
                            $(`<div class="password-strength" id="passwordStrength">
                                    <div class="password-strength-bar" id="passwordStrengthBar"></div>
                                </div>`).appendTo(messagesWrapper);
                            $(`<div id="passwordError" class="error-message">
                                    Password must be 8-15 characters with 1 uppercase, 1 lowercase, 1 number, and 1 special character.
                                </div>`).appendTo(messagesWrapper);
                            $(`<div id="samePasswordError" class="error-message">
                                    New password cannot be the same as current password.
                                </div>`).appendTo(messagesWrapper);
                        },
                        validation: {
                            required: { message: "New password is required" }
                        }
                    },
                    {
                        field: "c_confirmpassword",
                        label: "Confirm New Password",
                        editor: function (container, options) {
                            const fieldWrapper = $('<div class="field-wrapper"></div>').appendTo(container);
                            const wrapper = $('<div class="password-wrapper"></div>').appendTo(fieldWrapper);
                            $(`<input type='password' name='${options.field}' id='${options.field}' required placeholder="Confirm new password" disabled />`)
                                .appendTo(wrapper).kendoTextBox();
                            $(`<button type="button" class="password-toggle" onclick="togglePassword('${options.field}')">
                                    <i id="${options.field}_icon" class="bi bi-eye"></i>
                                </button>`).appendTo(wrapper);
                            
                            const messagesWrapper = $('<div class="messages-wrapper"></div>').appendTo(fieldWrapper);
                            $(`<div id="confirmPasswordError" class="error-message">
                                    Passwords do not match.
                                </div>`).appendTo(messagesWrapper);
                            $(`<div id="confirmPasswordSuccess" class="success-message">
                                    Passwords match! ‚úì
                                </div>`).appendTo(messagesWrapper);
                        },
                        validation: {
                            required: { message: "Confirm password is required" }
                        }
                    }
                ],
                buttonsTemplate: `
                    <div class="mt-3">
                        <button type="button" class="k-button k-primary btn-change" onclick="SaveData()">Change Password</button>
                    </div>
                `,
                submit: function (e) {
                    e.preventDefault();
                }
            });

            // Real-time validation for old password
            $('#c_oldpassword').on('input', function () {
                const oldPassword = $(this).val();
                const newPassword = $('#c_newpassword').val();
                
                if (newPassword && oldPassword === newPassword) {
                    $('#samePasswordError').show();
                } else {
                    $('#samePasswordError').hide();
                }
            });

            // Real-time validation for new password
            $('#c_newpassword').on('input', function () {
                const password = $(this).val();
                const oldPassword = $('#c_oldpassword').val();
                
                const isValid = validatePassword(password, oldPassword);
                
                // Enable/disable confirm password field based on validation
                if (isValid) {
                    $('#c_confirmpassword').prop('disabled', false);
                    $('#c_confirmpassword').closest('.k-textbox').removeClass('k-disabled');
                } else {
                    $('#c_confirmpassword').prop('disabled', true);
                    $('#c_confirmpassword').closest('.k-textbox').addClass('k-disabled');
                }
                
                const confirmPassword = $('#c_confirmpassword').val();
                if (confirmPassword) {
                    validateConfirmPassword(password, confirmPassword);
                }
            });

            // Real-time validation for confirm password
            $('#c_confirmpassword').on('input', function () {
                const confirmPassword = $(this).val();
                const newPassword = $('#c_newpassword').val();
                validateConfirmPassword(newPassword, confirmPassword);
            });
        });

        function validatePassword(password, oldPassword) {
            const passwordError = $('#passwordError');
            const samePasswordError = $('#samePasswordError');
            const passwordStrength = $('#passwordStrength');
            const passwordStrengthBar = $('#passwordStrengthBar');
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&#])[A-Za-z\d@@$!%*?&#]{8,15}$/;

            // Check if new password is same as old password
            if (oldPassword && password === oldPassword) {
                samePasswordError.show();
                $('#c_confirmpassword').prop('disabled', true);
                $('#c_confirmpassword').closest('.k-textbox').addClass('k-disabled');
                passwordStrength.hide();
                return false;
            } else {
                samePasswordError.hide();
            }

            // Validate password strength
            if (password.length === 0) {
                passwordError.hide();
                passwordStrength.hide();
                $('#c_confirmpassword').prop('disabled', true);
                $('#c_confirmpassword').closest('.k-textbox').addClass('k-disabled');
                return false;
            }

            passwordStrength.show();

            // Calculate password strength
            let strength = 0;
            if (password.length >= 8 && password.length <= 15) strength++;
            if (/[a-z]/.test(password)) strength++;
            if (/[A-Z]/.test(password)) strength++;
            if (/\d/.test(password)) strength++;
            if (/[@@$!%*?&#]/.test(password)) strength++;

            // Update strength bar
            passwordStrengthBar.removeClass('strength-weak strength-medium strength-strong');
            if (strength <= 2) {
                passwordStrengthBar.addClass('strength-weak');
            } else if (strength <= 4) {
                passwordStrengthBar.addClass('strength-medium');
            } else {
                passwordStrengthBar.addClass('strength-strong');
            }

            if (passwordRegex.test(password)) {
                passwordError.hide();
                $('#c_confirmpassword').prop('disabled', false);
                $('#c_confirmpassword').closest('.k-textbox').removeClass('k-disabled');
                return true;
            } else {
                passwordError.show();
                $('#c_confirmpassword').prop('disabled', true);
                $('#c_confirmpassword').closest('.k-textbox').addClass('k-disabled');
                return false;
            }
        }

        function validateConfirmPassword(newPassword, confirmPassword) {
            const confirmPasswordError = $('#confirmPasswordError');
            const confirmPasswordSuccess = $('#confirmPasswordSuccess');

            if (confirmPassword.length === 0) {
                confirmPasswordError.hide();
                confirmPasswordSuccess.hide();
                return false;
            }

            if (newPassword !== confirmPassword) {
                confirmPasswordError.show();
                confirmPasswordSuccess.hide();
                return false;
            } else {
                confirmPasswordError.hide();
                confirmPasswordSuccess.show();
                return true;
            }
        }

        function togglePassword(fieldId) {
            const passwordField = $('#' + fieldId);
            const icon = $('#' + fieldId + '_icon');
            
            if (passwordField.attr('type') === 'password') {
                passwordField.attr('type', 'text');
                icon.removeClass('bi-eye').addClass('bi-eye-slash');
            } else {
                passwordField.attr('type', 'password');
                icon.removeClass('bi-eye-slash').addClass('bi-eye');
            }
        }

        function SaveData() {
            var formData = new FormData($("#changePasswordForm")[0]);
            var oldPassword = formData.get("c_oldpassword");
            var newPassword = formData.get("c_newpassword");
            var confirmPassword = formData.get("c_confirmpassword");

            // Validate all fields
            if (!oldPassword || !newPassword || !confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Missing Fields',
                    text: 'Please fill in all fields.',
                    confirmButtonColor: '#1e88e5'
                });
                return;
            }

            // Check if old and new passwords are the same
            if (oldPassword === newPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Password',
                    text: 'New password cannot be the same as current password.',
                    confirmButtonColor: '#1e88e5'
                });
                return;
            }

            // Check if passwords match
            if (newPassword !== confirmPassword) {
                Swal.fire({
                    icon: 'error',
                    title: 'Password Mismatch',
                    text: 'New password and confirm password do not match.',
                    confirmButtonColor: '#1e88e5'
                });
                return;
            }

            // Validate password format
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@@$!%*?&#])[A-Za-z\d@@$!%*?&#]{8,15}$/;
            if (!passwordRegex.test(newPassword)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Invalid Password Format',
                    text: 'Password must be 8-15 characters with 1 uppercase, 1 lowercase, 1 number, and 1 special character.',
                    confirmButtonColor: '#1e88e5'
                });
                return;
            }

            // Get email from session/storage (adjust according to your auth implementation)
            @* var email = '@Context.Session.GetString("Email")' ; // Replace with actual email retrieval
            formData.append("c_email", email); *@

            // Show loading
            Swal.fire({
                title: 'Changing Password...',
                text: 'Please wait',
                allowOutsideClick: false,
                allowEscapeKey: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            $.ajax({
                url: "http://localhost:5140/api/UserApi/ChangePassword",
                type: "POST",
                  headers: {
                "Authorization": "Bearer " + token
                },
                contentType: false,
                processData: false,
                data: formData,
                success: function (res) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Password changed successfully!',
                        confirmButtonColor: '#1e88e5',
                        timer: 2000,
                        timerProgressBar: true
                    }).then(() => {
                        // Clear form
                        $("#changePasswordForm")[0].reset();
                        $('#c_confirmpassword').prop('disabled', true);
                        $('#passwordStrength').hide();
                        $('.error-message, .success-message').hide();
                        // Reset all toggle icons to eye (hidden password)
                        $('.password-toggle i').removeClass('bi-eye-slash').addClass('bi-eye');
                        window.location.href='/Recruiter/Index'
                    });
                },
                error: function (err) {
                    console.log(err);
                    var errorMessage = "Failed to change password. ";
                    if (err.responseJSON && err.responseJSON.message) {
                        errorMessage += err.responseJSON.message;
                    } else {
                        errorMessage += "Please try again.";
                    }
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: errorMessage,
                        confirmButtonColor: '#1e88e5'
                    });
                }
            });
        }
    </script>
</body>
</html>